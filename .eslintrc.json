{
    "root": true,
    "extends": ["plugin:svelte/recommended", "prettier"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "parser": "svelte-eslint-parser",
            "rules": {
                "svelte/no-at-html-tags": "off"
            }
        }
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2022
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "UIkit": true,
        "ClipboardJS": true
    }
}
