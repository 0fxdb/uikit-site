{
    "tabWidth": 4,
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
        {
            "files": ["**/*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        { "files": "*.svelte", "options": { "parser": "svelte" } }
    ],
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-organize-imports"]
}
